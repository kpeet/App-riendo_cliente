<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       
        >
        <TextView 
            android:text="@string/titulo_mis_arriendos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/usr_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF4000"
            android:textSize="22sp" />

       <Button 
           android:id="@+id/boton_agregar_arriendo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/agregar_arriendo"
           />
         <Button 
           android:id="@+id/buscar_arriendo_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/buscar_arriendo_btn"
           />
        
        
    </LinearLayout>
    

</LinearLayout>
