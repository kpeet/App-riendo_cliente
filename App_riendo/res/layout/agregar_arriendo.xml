<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        
        >
        <TextView 
            android:text="@string/titulo_agregar_arriendo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
           
            />
        <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Valor Arriendo"
                android:layout_marginTop="25dip"
           />
          <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/valor_arriendo"
                              
           />
           <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Descripción Arriendo:"
                android:layout_marginTop="25dip"
           />
            <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/descripcion_arriendo"
                              
           />
            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Dirección"
                android:layout_marginTop="25dip"
           />
             <Spinner
		        android:id="@+id/spinner1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="16dp" />
       
                
        
        
       <Button 
           android:id="@+id/boton_agregar_arriendo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/agregar_arriendo"
           />
    </LinearLayout>
    

</LinearLayout>
